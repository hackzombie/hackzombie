  <% @page_title = "Details" %>
  <style>
    .hero {
      float: right;
      margin: 5px;
    }

    .section > div, .updates li {
      border: 0px solid black;
    }

    #shakacounter {
      width: 61px;
      height: 94px;
      background: url('/images/shaka-counter.png') no-repeat;
      display: inline-block;
      padding-top: 6px;
      text-align: center;
      font-size: 20pt;
      color: #d72606;
    }

    .section {
      margin: 10px;
    }

    .container {
      background: url('/images/details-container.png') no-repeat;
      height: 166px;
    }

    .right {
      margin-left: 80px;
    }

    .left {
      width: 75px;
      float: left;
      clear: left;
    }

    .topbarside {
      position: absolute;
      right: 0px;
      top: 0px;
      width: 70px;
      padding-top: 20px;
    }

    .timecontainer {
      font-size: 20pt;
      color: black;
    }

    .platforms {
    }

    .clock {
      width: 14px;
      height: 14px;
      background: url('/images/clock.png');
      display: inline-block;
    }

    .location {
      font-size: 16pt;
      color: #666;
      padding: 0px;
      padding-top: 10px;
    }

    .locationicon {
      width: 13px;
      height: 20px;
      background: url('/images/location-icon.png');
      display: inline-block;
      margin: 3px;
      vertical-align: middle;
    }

    .iosicon {
      margin-top: 15px;
      width: 13px;
      height: 24px;
      background: url('/images/phone.png');
    }

    .sectionicon {
      width: 30px;
      height: 30px;
      background: blue;
    }

    .teamicon {
      background: url('/images/team-icon.png');
      width: 47px;
      height: 34px;
      margin: 10px;
    }

    .newsicon {
      background: url('/images/news-icon.png');
      width: 41px;
      height: 34px;
      margin: 10px;
    }

    .profilelist {
      list-style: none;
    }

    .profile {
      display: inline;
    }

    .profilephoto {
      margin: 0;
      padding: 0;
      margin-top: 20px;
      width: 90px;
      height: 90px;
      background: blue;
      display: inline-block;
    }

    .profilelabel {
      font-size: 12pt;
    }

    .scrollwrapper {
      position:relative;
      z-index:1;
      width:100%;
      height:150px;
      overflow:auto;
    }

    .scroller {
      width:700px;
      float:left;
      padding:0;
      margin-right:20px;
    }

    .scroller ul {
      list-style:none;
      display:block;
      float:left;
      width:100%;
      height:100%;
      padding:0;
      margin:0;
    }

    .scroller li {
      display:block;
      float:left;
      height: 150px;
      margin-top: 10px;
      text-align:center;
    }

    .scroller .profiles li {
      width: 150px;
    }

    .updates li {
      border-right: 1px solid #aaa;
      width: 250px;
    }

    #page {
      background: url('/images/details-background.png') no-repeat;
      background-size: cover;
      font-family: Garamond, "Times New Roman", serif;
      text-shadow: 0px 0px;
    }

    #topbar {
      background: url('/images/details-top-bar.png') repeat-x;
      height: 110px;
      width: 100%;
      padding-left: 15px;
      position: relative;
    }

    .ui-content {
      padding: 0;
    }

    #title {
      font-size: 38pt;
      color: white;
      margin:0px;
      margin-bottom: -10px;
      padding: 0;
      padding-top: 10px;
    }

    #description {
      font-size: 18pt;
    }

    #comments {
      background: #4a4a4a;
      padding-top: 10px;
      padding-bottom: 10px;
      color: white;
    }

    #comments .section {
      min-height: 70px;
    }

    .commentphoto {
      width: 57px;
      height: 57px;
      background: blue;
    }
  </style>

	<div data-role="content">	
    <div id="topbar">
      <div class="topbarside">
        <div class="timecontainer">
          <div class="clock"></div>
          <%= @hack.short_age %>
        </div>
        <div class=platforms>
          <% @hack.platforms.each do |platform| %>
            <div class="iosicon"></div>
          <% end %>
        </div>
      </div>
      <h3 id="title">Namerick</h3>
      <div class="location"><div class="locationicon"></div><%= @hack.event.name %></div>
    </div>
    <div class="section">
      <div class="left">
        <div id="shakacounter">
          <%= @hack.votes %>
        </div>
      </div>
      <div class="right">
        <% if @hack.media_url.include? "youtube.com" %>
          <iframe class="hero" width="150" height="112" src="<%= @hack.media_url %>" frameborder="0" allowfullscreen></iframe>
        <% else %>
          <img class="hero" src="<%= @hack.media_url %>" frameborder="0"/>
        <% end %>
        <p id="description"><%= @hack.description %></p>
      </div>
    </div>
    <div class="section container">
      <div class="left">
        <div class="teamicon"></div>
      </div>
      <div class="right">
        <div id="profilescrollwrapper" class="scrollwrapper">
          <div class="scroller">
            <!-- TODO(scotty): hook this up to the db once the team models are done -->
            <ul class="profiles">
              <li>
                <img class="profilephoto" src="http://graph.facebook.com/517267866/picture?type=square"/>
                <div class="profilelabel">Developer</div>
              </li>
              <li>
                <img class="profilephoto" src="http://graph.facebook.com/517267866/picture?type=square"/>
                <div class="profilelabel">Developer</div>
              </li>
              <li>
                <img class="profilephoto" src="http://graph.facebook.com/517267866/picture?type=square"/>
                <div class="profilelabel">Developer</div>
              </li>
              <li>
                <img class="profilephoto" src="http://graph.facebook.com/517267866/picture?type=square"/>
                <div class="profilelabel">Developer</div>
              </li>
              <li>
                <img class="profilephoto" src="http://graph.facebook.com/517267866/picture?type=square"/>
                <div class="profilelabel">Developer</div>
              </li>
              <li>
                <img class="profilephoto" src="http://graph.facebook.com/517267866/picture?type=square"/>
                <div class="profilelabel">Developer</div>
              </li>
              <li>
                <img class="profilephoto" src="http://graph.facebook.com/517267866/picture?type=square"/>
                <div class="profilelabel">Developer</div>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="section container">
      <div class="left">
        <img class="newsicon"/>
      </div>
      <div class="right">
        <div id="updatesscrollwrapper" class="scrollwrapper">
          <div class="scroller">
            <ul class="updates">
              <% @hack.hackdescriptionupdates.each do |update| %>
              <li>
                <p><%= update.description %></p>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div id="comments">
      <div class="section">
        <div class="left">
          <img class="commentphoto" src="http://graph.facebook.com/517267866/picture?type=square"/>
        </div>
        <div class="right">
          <textarea placeholder="Give Feedback"></textarea>
          <input type="button" value="Comment">
        </div>
      </div>
      <% @hack.comments.each do |comment| %>
      <div class="section">
        <div class="left">
          <img class="commentphoto" src="http://graph.facebook.com/517267866/picture?type=square"/>
        </div>
        <div class="right">
          <p><%= comment.comment %></p>
        </div>
      </div>
      <% end %>
    </div>
	</div><!-- /content -->

  <script type="text/javascript">
    var profileScroll;
    var updatesScroll;
    function loaded() {
      profileScroll = new iScroll('profilescrollwrapper', {
          snap: 'li',
          momentum: false,
          hScrollbar: false,
          vScrollbar: false,
          vScroll: false,
      });
      updatesScroll = new iScroll('updatesscrollwrapper', {
          snap: 'li',
          momentum: false,
          hScrollbar: false,
          vScrollbar: false,
          vScroll: false,
      });
    }
    $('#page').live('pageshow', loaded);
  </script>
